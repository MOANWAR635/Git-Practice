@{
}
@{
    ViewData["Title"] = "Registration  Page";
}
<div style="border:solid  red 3px; height: 630px;  width : 500px; border-radius: 60px;">
    <div style="text-align:center; margin-top:60px">
        <h4>  This is Registration Page </h4>
        <form method="post" asp-action="Index1">
            <label>ID</label>
            <input type="number" name="ID" placeholder="Enter Your Id" />
            <br /><br />
            <label>FName</label>
            <input type="text" name="FName" placeholder="Enter Your Name" />
            <br /><br />
            <label>LName</label>
            <input type="text" name="LName" placeholder="Enter Your LName" />
            <br /><br />
            <label>Email</label>
            <input type="email" name="Email" placeholder="Enter Your Email" />
            <br /><br />
            <label>Passwords</label>
            <input type="password" name="Passwords" placeholder="Enter Your Passwords" />
            <br /><br />
            <label>FatherName</label>
            <input type="text" name="FatherName" placeholder="Enter Your FatherName" />
            <br /><br />
            <label>Address</label>
            <input type="text" name="Address" placeholder="Enter Your Address" />
            <br /><br />
            <label>Pincode</label>
            <input type="text" name="Pincode" placeholder="Enter Your Pincode" />
            <br /><br />
            <input type="submit" value="Submit" />
        </form>
    </div>
</div>